@model MyProjectShopApp.UI.Models.DTO.ProductDTO
@{
    ViewData["Title"] = "EditProduct";
}

    <div class="container">

        <h1>Edit Product</h1>

        @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post,new {enctype ="multipart/form-data"}))
        {

            <input type="hidden" name="ProductID" value="@Model.ID" />

            <div class="form-group">
                <label for="ProductName">Product Name</label>
                <input type="text" name="ProductName" value="@Model.ProductName" class="form-control">

            </div>

            <div class="form-group">
                <label for="ProductDescription">ProductDescription</label>
                <textarea class="form-control" name="ProductDescription">@Model.ProductDescription</textarea>

            </div>

            <div class="form-group">
                <label for="ImgURL">ImgURL</label>
                <input hidden="hidden" value="@Model.ImgURL" name="ImgURL"/>
                <img src="~/IMG/@Model.ImgURL" width="80" />
                <input type="file" name="file" />

            </div>

            <div class="form-group">
                <label for="Price">Price</label>
                <input type="text" name="Price" value="@Model.Price" class="form-control">

            </div>

            <button type="submit" class="btn btn-success">Save Product</button>

        }






    </div>

